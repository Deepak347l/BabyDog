<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".Fragments.Home">
    <RelativeLayout
        android:id="@+id/balanceDetails"
        android:layout_marginTop="92dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_rectangle_2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:id="@+id/balanceDes"
            android:layout_centerHorizontal="true"
            android:text="Balance"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/avlToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/balanceDes"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="2500000 Tokens" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/balanceDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">



               <LinearLayout
                   android:id="@+id/brandLogo"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="25dp"
                   android:background="@drawable/ic_logoofbrand"
                   android:gravity="center_horizontal|center_vertical"
                   android:layout_centerHorizontal="true"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_share_24"/>

               </LinearLayout>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/timer"
               android:layout_width="155dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:textSize="18sp"
               android:text="START"
               android:gravity="center_horizontal|center_vertical"
               android:fontFamily="@font/poppins_medium"
               android:includeFontPadding="false"
               android:textAlignment="center"
               android:background="@drawable/rectangle_shape"
               android:textColor="@android:color/white"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/brandLogo"/>

           <LinearLayout
               android:id="@+id/btnContainer"
               android:layout_below="@+id/timer"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:padding="15dp"
               android:orientation="vertical">

           <LinearLayout
               android:id="@+id/bn1"
               android:layout_width="match_parent"
               android:layout_height="82dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="15dp"
               android:background="@drawable/custom_edittext"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/linear37"
                   android:layout_width="80dp"
                   android:layout_height="match_parent"
                   android:gravity="center_horizontal|center_vertical"
                   android:orientation="vertical">
                   <LinearLayout
                       android:id="@+id/img3"
                       android:layout_width="65dp"
                       android:layout_height="65dp"
                       android:background="@drawable/custom_edittext"
                       android:gravity="center_horizontal|center_vertical"
                       android:orientation="vertical">
                       <ImageView
                           android:id="@+id/imageview6"
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/ic_baseline_card_giftcard_24"
                           android:scaleType="fitCenter" />
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/linear38"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <TextView
                       android:id="@+id/textview17"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:text="Scratch Card "
                       android:fontFamily="@font/poppins_medium"
                       android:textSize="22sp"
                       android:textColor="#000000" />
                   <TextView
                       android:id="@+id/textview18"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="1dp"
                       android:fontFamily="sans-serif-smallcaps"
                       android:text="Scratch card And Win 40k Tokens"
                       android:textSize="12sp"
                       android:textColor="#000000" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/linear39"
                   android:layout_width="80dp"
                   android:layout_height="match_parent"
                   android:padding="8dp"
                   android:gravity="center_horizontal|center_vertical"
                   android:orientation="vertical">
                   <ImageView
                       android:id="@+id/imageview7"
                       android:layout_width="35dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_navigate_next_24"
                       android:scaleType="fitCenter" />
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/bn4"
               android:layout_width="match_parent"
               android:layout_height="82dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginBottom="15dp"
               android:background="@drawable/custom_edittext"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/linear42"
                   android:layout_width="80dp"
                   android:layout_height="match_parent"
                   android:gravity="center_horizontal|center_vertical"
                   android:orientation="vertical">
                   <LinearLayout
                       android:id="@+id/img4"
                       android:layout_width="65dp"
                       android:layout_height="65dp"
                       android:background="@drawable/custom_edittext"
                       android:gravity="center_horizontal|center_vertical"
                       android:orientation="vertical">
                       <ImageView
                           android:id="@+id/imageview8"
                           android:layout_width="45dp"
                           android:layout_height="45dp"
                           android:src="@drawable/development"
                           android:scaleType="fitCenter" />
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/linear43"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <TextView
                       android:id="@+id/textview19"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:text="Refer &amp; Earn "
                       android:fontFamily="@font/poppins_medium"
                       android:textSize="22sp"
                       android:textColor="#000000" />
                   <TextView
                       android:id="@+id/textview20"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="1dp"
                       android:text="Invite Your Friends And Earn Together"
                       android:fontFamily="sans-serif-smallcaps"
                       android:textSize="12sp"
                       android:textColor="#000000" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/linear44"
                   android:layout_width="80dp"
                   android:layout_height="match_parent"
                   android:padding="8dp"
                   android:gravity="center_horizontal|center_vertical"
                   android:orientation="vertical">
                   <ImageView
                       android:id="@+id/imageview9"
                       android:layout_width="35dp"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_navigate_next_24"
                       android:scaleType="fitCenter" />
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>


       </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>